  RewriteRule ^(css|images|js|stylesheets|libs|files)/(.*)$ /assets/$1/$2 [NC,L]
  
  RewriteRule ^cursos/?$ pages/courses.html [NC]
  RewriteRule ^cursos/(lancamentos|gratuitos)?/?$ pages/courses.html [NC]
  RewriteRule ^cursos/(online|presenciais)/?$ pages/courses.html [NC]
  RewriteRule ^cursos/(online|presenciais)/([^/]+)/?$ pages/courses.html [NC]

  RewriteRule ^curso/([^/]+)?/?$ pages/info.html [NC]
  RewriteRule ^curso/(online|presencial)/([^/]+)/?$ pages/info.html?mod=$1&curso=$2 [NC]
  
  RewriteRule ^institucional/?$ pages/institucional.html [NC]
  RewriteRule ^institucional/([^/]+)?/?([^/]+)?/?([^/]+)?$ pages/institucional.html [NC,L]
  
  RewriteRule ^aluno/?([^/]+)?/?$ pages/aluno.html [NC]
  RewriteRule ^aluno/(carrinho)/([^/]+)$ pages/aluno.html [NC]
  RewriteRule ^(login|cadastro|lembrete-de-senha)/?$ pages/aluno-sem-menu.html [NC]
  
  RewriteRule ^sugira/([^/]+)?/?$ pages/sugira.html?filter=$1 [NC]
  RewriteRule ^sugira/?$ pages/sugira.html [NC]
  RewriteRule ^(duvida|duvidas)/?$ pages/duvidas.html [NC]
  RewriteRule ^(carrinho)/?$ pages/carrinho.html [NC]
  RewriteRule ^(carrinho)/([^/]+)$ pages/carrinho.html [NC]
  RewriteRule ^(carrinho)/([^/]+)/([^/]+)$ pages/carrinho.html [NC]
  RewriteRule ^(certificacao-proficiencia)/?$ pages/certificacao-proficiencia.html [NC]

  <ifModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_dechunk Yes
    mod_gzip_item_include file \.(html?|txt|css|js|php|pl)$
    mod_gzip_item_include mime ^application/x-javascript.*
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
    mod_gzip_item_exclude mime ^image/.* 
    mod_gzip_item_include handler ^cgi-script$
  </ifModule>